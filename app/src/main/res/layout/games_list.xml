<?xml version="1.0" encoding="utf-8"?>


<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardBackgroundColor="#E0FFFFFF"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_marginVertical="10dp"
    android:layout_marginStart="20dp"
    android:layout_marginEnd="20dp"
    android:layout_marginHorizontal="10dp"
    app:cardCornerRadius="5dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        android:orientation="vertical">

        <TextView
            android:fontFamily="@font/robotocondensed"
            android:id="@+id/games_series"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="10dp"
            android:textStyle="bold"
            android:gravity="center"
            android:text="Series"
            android:textSize="16sp" />
        <TextView
            android:layout_marginTop="5dp"
            android:fontFamily="@font/robotocondensedlight"
            android:id="@+id/games_venue"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:gravity="center"
            android:text="Venue"
            android:textSize="14sp" />





        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="170dp"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:fontFamily="@font/robotocondensed"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textStyle="bold"
                    android:layout_marginTop="20dp"
                    android:gravity="start"
                    android:text="Home"
                    android:layout_marginLeft="75dp"
                    android:layout_weight=".5"/>

                <LinearLayout
                    android:layout_marginTop="5dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="5dp"
                    android:orientation="vertical">

                    <androidx.cardview.widget.CardView
                        android:layout_width="wrap_content"
                        android:layout_marginVertical="5dp"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="45dp"
                        app:cardCornerRadius="10dp">

                        <de.hdodenhof.circleimageview.CircleImageView
                            android:layout_margin="10dp"
                            android:id="@+id/games_home_logo"
                            android:layout_width="80dp"
                            android:layout_height="80dp"/>

                    </androidx.cardview.widget.CardView>



                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:layout_gravity="center"
                        android:weightSum="1">
                        <TextView
                            android:id="@+id/games_home_name"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:textAlignment="center"
                            android:paddingLeft="10dp"
                            android:text=""
                            android:layout_weight=".5"/>
                        <TextView
                            android:layout_marginRight="10dp"
                            android:id="@+id/games_home_score"
                            android:layout_width="match_parent"
                            android:textAlignment="center"
                            android:layout_height="wrap_content"
                            android:paddingLeft="10dp"
                            android:layout_gravity="center"
                            android:text=""
                            android:layout_weight=".5"/>
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>



            <LinearLayout
                android:layout_width="190dp"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <TextView
                    android:fontFamily="@font/robotocondensed"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="start"
                    android:layout_marginTop="20dp"
                    android:layout_marginLeft="55dp"
                    android:text="Away"
                    android:textStyle="bold"
                    android:layout_weight=".5"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="5dp"
                    android:layout_marginTop="5dp"
                    android:orientation="vertical">

                    <androidx.cardview.widget.CardView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginVertical="5dp"
                        android:layout_marginLeft="18dp"
                        android:layout_marginRight="5dp"
                        app:cardCornerRadius="10dp">

                        <de.hdodenhof.circleimageview.CircleImageView
                            android:layout_margin="10dp"
                            android:id="@+id/games_away_logo"
                            android:layout_width="80dp"
                            android:layout_height="80dp"/>
                    </androidx.cardview.widget.CardView>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:layout_gravity="center"
                        android:weightSum="1">

                        <TextView
                            android:fontFamily="@font/robotocondensed"
                            android:id="@+id/games_away_name"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:paddingLeft="20dp"
                            android:text=""
                            android:layout_weight=".5"/>

                        <TextView
                            android:fontFamily="@font/robotocondensedlight"
                            android:layout_marginRight="10dp"
                            android:id="@+id/games_away_score"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="20dp"
                            android:layout_gravity="center"
                            android:text=""
                            android:layout_weight=".5"/>
                    </LinearLayout>

                </LinearLayout>

            </LinearLayout>


        </LinearLayout>


        <TextView
            android:fontFamily="@font/robotocondensed"
            android:id="@+id/games_status"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="Status"
            android:textSize="14sp"
            />



        <TextView
            android:fontFamily="@font/robotocondensed"
            android:layout_marginTop="5dp"
            android:id="@+id/games_date"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="right"
            android:layout_marginBottom="10dp"
            android:textStyle="bold"
            android:textColor="@color/colorGreen"
            android:paddingRight="10dp"
            android:text="Date"/>
    </LinearLayout>
</androidx.cardview.widget.CardView>